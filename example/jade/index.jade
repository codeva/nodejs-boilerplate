extends base

mixin unrollSubsections( subsections )
  div( class="row" )
    each subsection in subsections
      div( class=subsection.class )
        if subsection.title
          h3 #{subsection.title}
        div !{subsection.content}
        if subsection.sections
          +unrollSubsections( subsection.sections )

block append content
  div( class="container" )
    div( class="row" )
      div( class="col-lg-12" )
        h1( class="page-header" ) #{message}
    each section in sections
      div( class="row" )
        div( class="col-lg-12" )
          if section.title
            h2 #{section.title}
          div !{section.content}
          if section.sections
            +unrollSubsections( section.sections )